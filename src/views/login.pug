doctype html
html
  head
    title Login
  body(style='margin: 0; padding: 0; display: flex; flex-direction: column; min-height: 100vh;')
    header(style='background-color: black; color: white; text-align: center; padding: 10px;')
      h1 Lecturer Contact Management System
      h2 Login
    main(style='flex-grow: 1; text-align: center; display: flex; flex-direction: column; justify-content: center; align-items: center;')
      form(action='/login' method='post' style='margin: 20px; width: 300px; text-align: left;')
        div(style='margin-bottom: 10px; font-size: 25px;')
          label(for='email') Email:
          input(type='email' id='email' name='email' required)
        div(style='margin-bottom: 10px; font-size: 25px;')
          label(for='password') Password:
          input(type='password' id='password' name='password' required)
        div(style='margin-bottom: 10px; font-size: 25px;')
          label(for='userType') User Type:
          select(id='userType' name='userType' required)
            option(value='student') Student
            option(value='admin') Admin
        button(type='submit' style='background-color: blue; color: white; font-size: 20px;') Login

    footer(style='background-color: black; color: white; width: 100%; font-size: 18px; text-align: center; padding: 10px; position: fixed; bottom: 0;')
